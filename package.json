{
    "dependencies": {
        "@tanstack/react-router": "^1.131.27",
        "clsx": "^2.1.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-markdown": "^10.1.0",
        "remark-gfm": "^4.0.1",
        "swr": "^2.3.6",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "devDependencies": {
        "@storybook/addon-themes": "^9.1.3",
        "@storybook/react-vite": "^9.1.3",
        "@tailwindcss/vite": "^4.1.12",
        "@tanstack/eslint-plugin-query": "^5.83.1",
        "@tanstack/router-devtools": "^1.131.27",
        "@tanstack/router-plugin": "^1.131.27",
        "@tyisi/config-changelog": "^2.0.0",
        "@tyisi/config-eslint": "^5.0.0",
        "@tyisi/config-prettier": "^2.0.0",
        "@tyisi/config-stylelint": "^2.0.0",
        "@types/react": "^19.1.11",
        "@types/react-dom": "^19.1.7",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "@vitejs/plugin-react": "^5.0.1",
        "eslint": "^9.34.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-storybook": "^9.1.3",
        "generate-react-cli": "^8.4.9",
        "just-install": "^2.0.2",
        "prettier": "^3.6.2",
        "prettier-plugin-sh": "^0.18.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "storybook": "^9.1.3",
        "stylelint": "^16.23.1",
        "stylelint-config-standard": "^39.0.0",
        "stylelint-order": "^7.0.0",
        "stylelint-prettier": "^5.0.3",
        "tailwindcss": "^4.1.12",
        "typescript": "^5.2.2",
        "vite": "^7.1.3",
        "wireit": "^0.14.12"
    },
    "name": "@tyisi/notes",
    "private": true,
    "scripts": {
        "build": "wireit",
        "build:storybook": "wireit",
        "commit": "npx git-cz@latest",
        "dev": "wireit",
        "lint": "wireit",
        "preview": "wireit",
        "storybook": "wireit",
        "type-check": "wireit"
    },
    "type": "module",
    "version": "0.0.0",
    "wireit": {
        "build": {
            "dependencies": [
                "build:dist",
                "build:type-check"
            ],
            "files": [
                "src/**/*"
            ]
        },
        "build:storybook": {
            "command": "just build storybook"
        },
        "build:docs": {
            "command": "just build docs",
            "files": [
                "docs/**/*"
            ],
            "output": [
                "public/docs/**/*"
            ],
            "clean": true
        },
        "build:dist": {
            "command": "just build dist",
            "dependencies": [
                "build:format",
                "build:lint",
                "build:docs",
                "build:type-check"
            ],
            "files": [
                "docs/**/*",
                "public/**/*",
                "src/**/*"
            ],
            "output": [
                "dist/"
            ],
            "clean": true
        },
        "build:format": {
            "dependencies": [
                "format"
            ],
            "files": [
                "src/**/*"
            ]
        },
        "build:lint": {
            "dependencies": [
                "lint"
            ],
            "files": [
                "src/**/*"
            ]
        },
        "build:type-check": {
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/**/*"
            ]
        },
        "dev": {
            "command": "just dev",
            "service": true
        },
        "format": {
            "command": "just lint"
        },
        "lint": {
            "command": "just lint"
        },
        "preview": {
            "command": "vite preview"
        },
        "serve": {
            "command": "just serve",
            "service": true
        },
        "start": {
            "command": "just start",
            "service": true
        },
        "storybook": {
            "command": "just storybook"
        },
        "test": {
            "command": "just test"
        },
        "type-check": {
            "command": "just type-check"
        }
    }
}
